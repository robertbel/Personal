---
interface Props {
    id: number;
    title: string;
    description: string;
    image: string;
    width: number;
    height: number;
}

const { id, title, description, image, width, height } = Astro.props;
---

<a href={`/item/${id}`} class="card">
    <div class="card-inner">
        <img 
            src={`/images/${image}`} 
            alt={title}
            transition:name={`image-${id}`}
            loading="eager"
            width={width}
            height={height}
        />
        <div class="card-content" transition:name={`card-${id}`}>
            <h2 transition:name={`title-${id}`}>{title}</h2>
            <p transition:name={`desc-${id}`}>{description}</p>
        </div>
    </div>
</a>

<style>
    .card {
        border-radius: 0.5rem;
        overflow: hidden;
    }
    .card-inner {
        background: var(--card-bg);
        border-radius: 0.5rem;
    }

    img {
        height: 200px;
        width: 100%;
        object-fit: cover;
    }

    .card-content {
        padding: 1rem;
    }

    h2 {
        font-size: 1.25rem;
        font-weight: bold;
    }

    p {
        color: var(--text-secondary);
    }
</style> 