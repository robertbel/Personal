---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import { items } from '../data/items';
---

<Layout title="View Transitions Demo">
    <div class="container">
        <div class="card-grid">
            {items.map((item) => (
                <Card {...item} />
            ))}
        </div>
    </div>
</Layout>

<style>
    .card-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
    }
</style>

