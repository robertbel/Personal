---
import Layout from '../../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';
import styles from '../../styles/detail.module.css';

export async function getStaticPaths() {
    const items = await getCollection('items');
    return items.map(item => ({
        params: { id: item.id },
        props: { item },
    }));
}

interface Props {
    item: CollectionEntry<'items'>;
}

const { item } = Astro.props;
const { Content } = await item.render();
---

<Layout title={item.data.title}>
  <main>
    <div class={styles.container}>
      <div class={styles.imageWrapper}>
        <a href="/" class={styles.backLink}>‚Üê Back</a>
        <img
          src={`/images/${item.data.image}`}
          alt={item.data.title}
          transition:name={`image-${item.id}`}
          loading="eager"
          class={styles.image}
        />
      </div>
      <div class={styles.contentWrapper}>
        <div class={styles.content} transition:name={`card-${item.id}`}>
          <h1 transition:name={`title-${item.id}`}>{item.data.title}</h1>
          <p class="description" transition:name={`desc-${item.id}`}>
            {item.data.description}
          </p>
          <div class="additional-content">
            <Content />
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .description {
    color: #ccc;
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
  }

  .additional-content {
    color: #aaa;
  }

  .additional-content h1 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    color: var(--text-color);
  }

  .additional-content h2 {
    font-size: 1.5rem;
    margin: 1.5rem 0 1rem;
    color: var(--text-color);
  }

  .additional-content p {
    margin-bottom: 1rem;
  }

  .additional-content ul {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .additional-content li {
    margin-bottom: 0.5rem;
  }
</style> 